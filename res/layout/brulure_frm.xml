<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

 <!-- HEADER -->
  <include android:id="@+id/top_header"
        android:layout_alignParentTop="true" layout="@layout/actionbar_layout" />
<LinearLayout
    android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back2"
        android:layout_below="@id/top_header" 
     >
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dip"
        android:layout_below="@id/top_header" >

        <LinearLayout
          android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
    android:padding="15px" >

                     

                      <TextView
                         android:id="@+id/textView3"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:layout_marginBottom="15dp"
                         android:text="Brûlure"
                         android:textStyle="bold"
                         android:textAppearance="?android:attr/textAppearanceLarge"
                         android:textColor="#990000" />

      

           <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="@android:drawable/editbox_dropdown_light_frame"
                      android:padding="10dp"
                      android:layout_margin="5dp"
                      >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:text="Passez une brûlure simple sous l’eau courante jusqu’au soulagement de la douleiur."
                android:textColor="#333333" />

</LinearLayout>
<LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="@android:drawable/editbox_dropdown_light_frame"
                      android:padding="10dp"
                      android:layout_margin="5dp"
                      >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:text="Retirez les vêtements et les bijoux s’ils ne sont pas collés à la peau."
                android:textColor="#333333" />

</LinearLayout>
<LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="@android:drawable/editbox_dropdown_light_frame"
                      android:padding="10dp"
                      android:layout_margin="5dp"
                      >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:text="Portégez la brûlure simple avec un pansement."
                android:textColor="#333333" />

</LinearLayout>
<LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="@android:drawable/editbox_dropdown_light_frame"
                      android:padding="10dp"
                      android:layout_margin="5dp"
                      >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:text="Si vous observez la présence d’ampoules, ne les crevez pas."
                android:textColor="#333333" />

</LinearLayout>
<LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="@android:drawable/editbox_dropdown_light_frame"
                      android:padding="10dp"
                      android:layout_margin="5dp"
                      >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:text="Si la blessure est grave, alertez les secours."
                android:textColor="#333333" />

</LinearLayout>
            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/vediobrulure" 
                android:layout_marginTop="27dp"/>
    
          </LinearLayout>
    </ScrollView>
    </LinearLayout>
</RelativeLayout>