<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/groupLayout"
        android:layout_width="fill_parent" android:layout_height="45dip"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/actionbar_background"        
        >
        <ImageView android:id="@+id/ImageView01" android:src="@drawable/singer_search"
                android:layout_height="40dip" android:layout_width="40dip" android:layout_marginLeft="40dip" android:layout_marginTop="4dip"></ImageView>

       

        <TextView android:id="@+id/tvGroup" android:layout_width="fill_parent"
                android:layout_height="45dip" android:text="Groups" android:gravity="center_vertical|right"
                android:paddingLeft="5dip" android:paddingRight="5dip"
                android:textColor="#ffffffff" android:textStyle="bold"
                android:textSize="17dip"></TextView>

</LinearLayout>